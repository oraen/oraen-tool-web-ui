{
  "name": "oraen-tool-web-ui",
  "version": "1.0.0",
  "main": "electron.cjs",
  "author": "ORAEN",
  "description": "开发人员的集成工具包",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.oraen.toolbox",
    "productName": "ORAEN工具箱",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "electron.cjs",
      "oraen-tool-web-ui/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "crypto-js": "^4.2.0",
    "decimal.js": "^10.5.0",
    "fast-xml-parser": "^5.0.8",
    "mathjs": "^14.3.1",
    "monaco-editor": "^0.55.1",
    "prettier": "^3.5.3",
    "prismjs": "^1.29.0",
    "qrcode": "^1.5.4",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-simple-code-editor": "^0.14.1",
    "react-syntax-highlighter": "^15.6.1",
    "vkbeautify": "^0.99.3",
    "xml-formatter": "^3.6.4",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@ant-design/icons": "^5.2.6",
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/modifiers": "^6.0.1",
    "@dnd-kit/sortable": "^7.0.2",
    "@dnd-kit/utilities": "^3.2.1",
    "@loadable/component": "^5.15.3",
    "@types/crypto-js": "^4.2.2",
    "@types/loadable__component": "^5.13.5",
    "@types/node": "^17.0.45",
    "@types/qs": "^6.9.8",
    "@types/react": "^18.2.22",
    "@types/react-color": "^3.0.6",
    "@types/react-dom": "^18.2.7",
    "@types/vkbeautify": "^0.99.4",
    "@vitejs/plugin-react": "^1.3.2",
    "antd": "^5.9.3",
    "antd-style": "^3.5.0",
    "array-move": "^3.0.1",
    "dayjs": "^1.11.13",
    "echarts": "^5.4.3",
    "echarts-for-react": "^3.0.2",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "less": "^4.2.0",
    "less-loader": "^10.2.0",
    "less-vars-to-js": "^1.3.0",
    "qs": "^6.11.2",
    "react-color": "^2.19.3",
    "react-redux": "^8.1.2",
    "react-router-dom": "^6.16.0",
    "redux": "^4.2.1",
    "typescript": "^4.9.5",
    "vite": "^3.2.7",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vite-plugin-react-router-generator": "^1.0.6"
  }
}
